{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist", 
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ]
}